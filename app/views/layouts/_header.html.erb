
		<div class = "container">
			<div id="header">
				<div id="logo">
					<a href="/"><img src="/assets/blog_bank_logo.png"></img></a>
				</div>
				<div id="categories">
					<span id="filler_filter_text">Filter Posts</span>
					<a  id="category_button">v<a>
					<div id="category_filter">
						<div class="filter" value="news">news</div>
						<div class="filter" value="sports">sports</div>
						<div class="filter" value="entertainment">entertainment</div>
						<div class="filter" value="health">health</div>
						<div class="filter" value="business">business</div>
						<div class="filter" value="science">science</div>
					</div>
				</div>
				<div class="navbar">
					<div id="login_form">
						<%= form_for :session, url: login_path, html: {class: "login_form"} do  |f| %>
							<%= f.label :email, "Email" %>
							<%= f.text_field :email, placeholder: "Email" %>
							<%= f.label :password , "Password"%>
							<%= f.password_field :password, placeholder: "Password" %>
						    <%= f.submit "Log in", html: {class: "login_button"} %>
						    <div style="clear:both">
						    </div>

						<% end %>
						<div id="sign_up_box">
							<div class="new"><%= link_to "New to blogbank?", new_user_path %></div>
							<ul>
								<li><%= link_to "Sign up", new_user_path %></li>
								<li><a href="#">How it works</a></li>
							</ul>
							<hr>
							<div class="new">Existing Bloggers</div>
							<ul>
								<li><a href="#">Members Forum</a></li>
								<li><a href="#">Legal</a></li>
							</ul>
						</div>
					</div>
					<ul>
						<li><a href="/about">About us</a></li>
						<%if session[:user_id] %>
							<li><%=link_to "My Account", user_path(session[:user_id]) %></a></li>
							<li><%=link_to "Log Out", logout_path %></a></li>
						<% else %>
							<li><a  id="member_center_link">Member Center</a></li>
						<% end %>
					</ul>
					<ul class="social_media">
						<a href="https://www.facebook.com/blogbank"><li class="facebook"></li></a>
						<a href="https:www.facebook.com/blogbank"><li class="instagram"></li></a>
						<a href="https://plus.google.com/u/0/111282199297623747326/about"><li class="google_plus"></li></a>
						<a href="https://www.twitter.com/theblogbank"><li class="twitter"></li></a>
					</ul>
				</div>
				<div id="searchbar">
					<input type="text" id="search_bar" placeholder="Search all blogs..."><button id="search_button" type="submit">Search</button>
				</div>
			</div>
			<div id="header_offset">
				<div>
				</div>
			</div>
			<div id="wrapper">