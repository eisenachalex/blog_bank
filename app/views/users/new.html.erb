<h2>Log in</h2>
<%= form_for :session, url: login_path, html: {class: "login_form"} do  |f| %>
	<%= f.text_field :email, placeholder: "Email" %>
	<%= f.password_field :password, placeholder: "Password" %>
    <%= f.submit "Log in" %>
    <div style="clear:both">
    </div>
<% end %>


<h2>Sign up</h2>
<%= form_for @user, url: users_path, html:{class: "login_form"} do |f| %>
	<%= f.text_field :email, placeholder: "Email" %>
	<%= f.text_field :username, placeholder: "Username" %>
	<%= f.password_field :password, placeholder: "Password" %>
	<%= f.password_field :passwordconfirm, placeholder:"Confirm Password"%>
	<%= f.text_field :firstname, placeholder:"First Name"%>
	<%= f.text_field :lastname, placeholder:"Last Name"%>
	<%= f.text_field :address, placeholder:"Address"%>
	<%= f.submit "Sign Up"%>
    <div style="clear:both">
    </div>
<% end %>

