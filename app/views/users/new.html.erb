
<div class="page_block">
	<%= form_for @user, url: users_path, html:{class: "sign_up_form"} do |f| %>
		<div class="form_title">Sign up</div>
		<table>
			<tr>
				<td>
					<%= f.label :email, "email*" %>
					<%= f.text_field :email, placeholder: "email we can reach" %>
				</td>
				<td>
					<%= f.label :Blog_name, "blog name*"  %>
					<%= f.text_field :username, placeholder: "name of your blog" %>
				</td>
			</tr>
			<tr>
				<td>
					<%= f.label :password, "password*"  %>
					<%= f.password_field :password, placeholder: "password" %>
				</td>
				<td>
					<%= f.label :password_confirm, "confirm password*"%>
					<%= f.password_field :passwordconfirm, placeholder:"confirm password"%>
				</td>
			</tr>
			<tr>
				<td>
					<%= f.label :first_name, "first name*" %>
					<%= f.text_field :firstname, placeholder:"First Name"%>
				</td>
				<td>
					<%= f.label :lastname, "last name*"%>
					<%= f.text_field :lastname, placeholder:"last name"%>
				</td>
			</tr>
			<tr>
				<td>
					<%= f.label :address, "home address*" %>
					<%= f.text_field :address, placeholder:"Address"%>
				</td>
				<td>
					<%= f.label :twitter_handle, "twitter handle" %>
					<%= f.text_field :twitter_handle, placeholder:"twitter handle"%>
				</td>

			</tr>
			<tr>
				<td>
					<%= f.submit "Sign Up", :class => "sign_up_button" %>
				</td>
			</tr>
	</table>
		<div style="clear:both">
		</div>
	<% end %>
</div>